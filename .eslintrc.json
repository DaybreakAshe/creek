{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals", // Next.js 推荐规则
    "plugin:tailwindcss/recommended", // Tailwind CSS 推荐规则
    "prettier" // 避免与 Prettier 冲突
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["tailwindcss"],
  "rules": {
    "tailwindcss/classnames-order": "warn", // 建议按推荐顺序排列类名
    "tailwindcss/enforces-shorthand": "warn", // 推荐简写，如 h-full w-full → size-full
    "tailwindcss/no-contradicting-classname": "error", // 禁止冲突类名
    "tailwindcss/no-custom-classname": "off", // 允许 shadcn/ui 的自定义类名
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn", "clsx", "cva"], // 支持 shadcn/ui 的动态类名
      "config": "./tailwind.config.js"
    }
  }
}
